@model Paginate<CategoryProductVM>

@{
    ViewData["Title"] = "Index";
}
<main id="main"class="main">
    <div class="container mt-5" >
        <h2 class="text-center">Categories</h2>
        <div class="create-operations ">
            <a asp-action="Create" class="btn btn-success text-white  mt-2"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-dark">
            <thead >
                <tr >
                   
                    <th scope="col"style="background-color:white;color:black">Category</th>
                    <th scope="col" style="background-color:white;color:black">Created date</th>
                    <th scope="col" style="background-color:white;color:black">Product count</th>
                    <th scope="col" style="background-color:white;color:black">Operations</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Datas)
                {
                    <tr class="category-data">
                    
                    <td>@item.CategoryName</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.ProductCount</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary text-white btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                        <a class="btn btn-warning text-white btn-sm"asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
                       <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type ="submit" class="btn btn-danger text-white btn-sm"><i class="fa-solid fa-trash"></i></button>
                       </form>
                            <a class="btn btn-secondary text-white btn-sm add-archive" data-id="@item.Id"><i class="bi bi-archive"></i></a>
                                
                            
                    </td>

                </tr>
                    
                }
         

            </tbody>
        </table>

        <div class="pagination-area d-flex justify-content-center mt-3">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" tabindex="-1">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")"><a class="page-link @(Model.CurrentPage == i ? "paginate-active" : "")" asp-action="Index" asp-route-page="@i">@i</a></li>
                    }
                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>



    </div>
</main>


@section js {
    <script src="~/Admin/assets/js/archive.js"></script>
}

 